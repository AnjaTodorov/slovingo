<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ splash configuration -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/character_splash</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/text_slovingo</item>
        <item name="android:windowSplashScreenBackground">@color/splash_bg</item>
    </style>
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
